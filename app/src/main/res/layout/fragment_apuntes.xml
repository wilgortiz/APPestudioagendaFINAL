<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal con LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etApunte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el texto del apunte"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnGuardarApunte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Apunte"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvApuntes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fabAgregarApunte"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:backgroundTint="#FF9800"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="+"
        android:textSize="36sp"
        app:cornerRadius="16dp"
        app:elevation="6dp"
        app:iconGravity="textTop"
        app:iconTint="@android:color/white" />

</FrameLayout>